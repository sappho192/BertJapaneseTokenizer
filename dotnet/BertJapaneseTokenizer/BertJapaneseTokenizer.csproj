<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net6.0;net7.0;net8.0</TargetFrameworks>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Title>BertJapaneseTokenizer</Title>
    <PackageId>$(AssemblyName)</PackageId>
    <Version></Version>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <Authors>sappho192</Authors>
    <Description>Minimal Tokenizer implementation of BertJapanese(tohoku-nlp/bert-base-japanese) in C#</Description>
    <Copyright>Copyright (c) Taein Kim(sappho192)</Copyright>
    <PackageProjectUrl>https://github.com/sappho192/BertJapaneseTokenizer</PackageProjectUrl>
    <RepositoryUrl>https://github.com/sappho192/BertJapaneseTokenizer.git</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>tokenizer;bert;japanese</PackageTags>
    <NuspecFile>BertJapaneseTokenizer.nuspec</NuspecFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="MeCab.DotNet" Version="1.2.0" />
    <PackageReference Include="RelaxVersioner" Version="3.4.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

</Project>
